#!/bin/bash
cowsay 'we about to make us un node project outa dis her dir'

echo ' bouta make dis eh git repo'
git init ./

echo 'time to make dat readme'
touch README.md

echo $txtgrn 'bouta make dat .gitignore'
cp ~/.bash/nacnud/resources/.gitignore ./

echo $txtgrn 'makin that first commit'
git add README.md
git add .gitignore
git commit -a -m 'first commit'

echo 'bouta copy in dat .jshintrc'
cp ~/.bash/nacnud/resources/.jshintrc ./

npm init

npm install mocha chai grunt grunt-cli grunt-contrib-watch grunt-contrib-jshint grunt-simple-mocha --save-dev

cp ~/.bash/nacnud/resources/Gruntfile.js ./

mkdir lib
mkdir test


cowsay -f satanic 'done son'
